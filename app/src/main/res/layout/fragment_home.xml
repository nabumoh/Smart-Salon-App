<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_bg"
    tools:context=".ui.HomeFragment">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="340dp"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Get You'r Celebrity Cut !"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:textStyle="bold"
        android:shadowColor="@color/colorBlack"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"
        app:fontFamily="@font/courgette"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/appointmentBtn"
        android:layout_width="202dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="@color/colorNavy"
        android:text="לחץ לקביעת תור"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="397dp"
        android:layout_height="181dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#D44F4F4F"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appointmentBtn">

        <Button
            android:id="@+id/brief"
            android:layout_width="130dp"
            android:layout_height="38dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/colorNavy"
            android:text="קצת על המספרה"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="הסיפור שלנו מתחיל בדירת חדר קטנה בתל אביב, מספר לקוחות מצומצם שהרגיש שיש פה סגנון חדש בעיר  כל תספורת בצבע ולאט לאט חבר הביא חבר עם הזמן וככל שהמשפחה התרחבה החלטנו להגדיל את עצמנו למקום שישרת אתכם כמו שרק לכם מגיע, אצלנו תמצאו כל מה שצריכים מקוסמטיקה פרא רפואית ועד כל נושא השיער, אז אם אתם רוצים להתרענן, להתחדש ולהיראות יפים קצת יותר ממה שאתם עכשין, בואו להתרווח אצלנו קצת בספות , תזכו בטיפולים וליחס אישי ואוהב וכמובן שירות מקצועי ונפלא עד הרגע שתצאו מחייכים מהדלת שנכנסתם, מחכים לכם."
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="366dp"
        android:layout_height="215dp"
        android:layout_marginTop="10dp"
        app:iss_auto_cycle="true"
        app:iss_corner_radius="5"
        app:iss_delay="0"
        app:iss_period="2500"
        app:iss_placeholder="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.429" />

</androidx.constraintlayout.widget.ConstraintLayout>