<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".ui.ProfileFragment">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="203dp"
        android:layout_height="112dp"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:text="My Profile"
        android:shadowColor="@color/colorBlack"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:textColor="@color/colorWhite"
        android:textSize="38sp"
        app:fontFamily="@font/courgette"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="353dp"
        android:layout_height="346dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#B3393939"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/nameFetch"
            android:layout_width="273dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_profile"
            android:drawableTint="#000000"
            android:ems="10"
            android:focusable="false"
            android:hint="Name"
            android:paddingLeft="10dp"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/emailFetch"
            android:layout_width="273dp"
            android:layout_height="44dp"
            android:layout_below="@+id/nameFetch"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/ic_email"
            android:drawableTint="#000000"
            android:ems="10"
            android:focusable="false"
            android:hint="E-mail"
            android:paddingLeft="10dp"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailFetch"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="79dp"
            android:layout_marginRight="79dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/colorNavy"
            android:text="Logout"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/courgette"
            android:textSize="20dp"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameFetch"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="194dp"
            android:layout_marginRight="194dp"
            android:text="E-mail :"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:fontFamily="@font/courgette" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="194dp"
            android:layout_marginRight="194dp"
            android:text="Username :"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:fontFamily="@font/courgette" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/editBtn"
        android:layout_width="34dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_edit_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/verifyMsg"
        android:layout_width="231dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:text="Email Is Not Verified !"
        android:textColor="#F51C40"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/editBtn"
        app:layout_constraintStart_toEndOf="@+id/back_arrow"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/verifyBtn"
        android:layout_width="111dp"
        android:layout_height="45dp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="142dp"
        android:layout_marginRight="142dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#F51C40"
        android:text="Verify Now"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_arrow"
        app:layout_constraintTop_toBottomOf="@+id/verifyMsg" />

</androidx.constraintlayout.widget.ConstraintLayout>