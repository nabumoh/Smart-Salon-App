<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".ui.LoginFragment">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="173dp"
        android:layout_height="112dp"
        android:layout_marginStart="59dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="294dp"
        android:layout_marginRight="294dp"
        android:text="Hello \n Again!"
        android:textColor="@color/colorWhite"
        android:textSize="38sp"
        app:fontFamily="@font/courgette"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="378dp"
        android:layout_height="497dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#B3393939"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/emailField"
            android:layout_width="273dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="47dp"
            android:layout_marginRight="47dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/colorWhite"
            android:drawableLeft="@drawable/ic_email"
            android:drawableTint="#000000"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/passField"
            android:layout_width="273dp"
            android:layout_height="44dp"
            android:layout_below="@+id/emailField"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/colorWhite"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableTint="#000000"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/ContinueBtn"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passField"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/colorOrange"
            android:text="Continue"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ContinueBtn"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="141dp"
            android:layout_marginRight="141dp"
            android:gravity="center"
            android:text="or"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:fontFamily="@font/courgette" />

        <Button
            android:id="@+id/googleBtn"
            android:layout_width="239dp"
            android:layout_height="59dp"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/colorWhite"
            android:drawableLeft="@drawable/google"
            android:paddingLeft="10sp"
            android:text="Continue with Google"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="173dp"
            android:layout_height="39dp"
            android:layout_above="@+id/resetPassTv"
            android:layout_below="@+id/googleBtn"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@+id/signUpTV"
            android:layout_toLeftOf="@+id/signUpTV"
            android:padding="8dp"
            android:text="Don't have an account?"
            android:textColor="@color/colorWhite"
            app:fontFamily="@font/courgette" />

        <TextView
            android:id="@+id/signUpTV"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_above="@+id/resetPassTv"
            android:layout_below="@+id/googleBtn"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"
            android:layout_marginBottom="17dp"
            android:padding="8dp"
            android:text="SignUp"
            android:textColor="@color/colorOrange"
            app:fontFamily="@font/courgette" />

        <TextView
            android:id="@+id/resetPassTv"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginEnd="126dp"
            android:layout_marginRight="126dp"
            android:layout_marginBottom="31dp"
            android:padding="8dp"
            android:text="Forgot your password?"
            android:textColor="@color/colorOrange"
            app:fontFamily="@font/courgette" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />
</androidx.constraintlayout.widget.ConstraintLayout>